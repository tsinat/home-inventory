extends ./layout.jade

block content
    .container
        h1.text-center Rooms  
        .message-board
        table
            thead.tableRow
                tr
                    th.myRow Room id
                    th.myRow Room Name
            tbody                
            - each val in messages
                tr.message
                    td
                        div.myRow=val.id
                    td
                        div.myRow=val.name
                    td 
                        button.delete.btn-danger(id=val.id) X
                    td 
                        button.edit.btn-success(type='button', data-toggle='modal', data-target='#myModal2' id=val.id) Edit
        
        // Trigger the modal with a button
        button.btn.btn-success.btn-lg.send(type='button', data-toggle='modal', data-target='#myModal') Add Room
        // Modal
        #myModal.modal.fade(role='dialog')
          .modal-dialog
            // Modal content
            .modal-content
              .modal-header
                button.btn-danger.close(type='button', data-dismiss='modal')
                h4.modal-title Add room
              .modal-body
                form.form(role='form')
                  .row
                    .form-group.col-lg-12
                      label(for='name') Name:
                      input#name.form-control(type='text', placeholder='Contact Name', required='')
                  .row
                    .form-group.col-lg-6
                      button#save.save.btn-primary.btn-lg(type='submit') Add
              .modal-footer
                button.btn.btn-danger(type='button', data-dismiss='modal') Close
        // Modal
    
